                <img src="/images/Brand Logo.PNG" width="120" height="110" alt="Brand Logo">
            </a>
        </div>



        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="">Men</a>
                    <ul class="dropdown-menu">
                        <li><a href="/men-loafers">Loafers</a></li>
                        <li><a href="/men-sneakers">Sneakers</a></li>
                        <li><a href="/men-flipflops">Flip Flops</a></li>
                        <li><a href="/men-sportshoes">Sports Shoes</a></li>
                        <li><a href="/men-formalshoes">Formal Shoes</a></li>                      
                    </ul>
            </li>

        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown"  href="">Women
            </a>
            <ul class="dropdown-menu">
                <li><a href="/women-flats">Flats</a></li>
                <li><a href="/women-heels">Heels</a></li>
                <li><a href="/women-boots">Boots</a></li>
                <li><a href="/women-sneakers">Sneakers</a></li>
                <li><a href="/women-sportshoes">Sports Shoes </a></li>
                
            </ul>
